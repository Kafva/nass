{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "strict": true,
    "types": ["vitest/globals", "vitest/importMeta"]
  },
  "include": ["client/**/*.d.ts", "client/**/*.ts", "client/**/*.js", "client/**/*.svelte", "vite.config.ts"]
}
