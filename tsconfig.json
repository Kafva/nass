{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "strict": true
  },
  "include": ["client/**/*.d.ts", "client/**/*.ts", "client/**/*.js", "client/**/*.svelte"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
